# HYTOPIA MCP Configuration
# Copy this file to .env and customize as needed

# Cache Configuration
CACHE_DIR=~/.cache/hytopia-mcp
CACHE_MAX_SIZE_MB=500
CACHE_TTL_HOURS=24

# SDK Configuration
SDK_AUTO_UPDATE=false
SDK_UPDATE_CHECK_INTERVAL_HOURS=6
SDK_GITHUB_TOKEN=  # Optional: For higher API rate limits

# Performance Configuration
MAX_SEARCH_RESULTS=20
ENABLE_CACHING=true
CACHE_PRELOAD=true

# Development Configuration
DEBUG=false
LOG_LEVEL=info
LOG_FILE=~/.logs/hytopia-mcp/server.log

# API Configuration
API_TIMEOUT_SECONDS=30
MAX_CONCURRENT_REQUESTS=10

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_TYPESCRIPT_PARSING=true
ENABLE_EXAMPLE_ANALYSIS=true