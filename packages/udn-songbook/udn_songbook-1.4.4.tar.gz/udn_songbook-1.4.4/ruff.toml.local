line-length = 88


[lint]
fixable = ["ALL"]
select = [
    "D",   # pydocstyle
    "E",   # pycodestyle errors
    "F",   # pyflakes
    "UP",  # pyupgrade
    "B",   # flake8 bugbears
    "SIM", # flake8-simplify
    "I",   # isort
]
extend-select = ["B", "I"]
extend-fixable = ["I"]
ignore = ["D212", "B006"]
#
[format]
docstring-code-format = true
preview = true
#
[lint.flake8-annotations]
allow-star-arg-any = true
suppress-dummy-args = true

[lint.pydocstyle]
convention = "google"
