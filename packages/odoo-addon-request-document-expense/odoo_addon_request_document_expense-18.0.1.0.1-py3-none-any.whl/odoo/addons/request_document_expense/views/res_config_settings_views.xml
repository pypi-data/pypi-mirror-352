<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_request_document" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.request</field>
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="request_document.res_config_settings_view_form_request_document"
        />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='request_document']" position="inside">
                <block title="Request Document Expense" name="request_expense">
                    <setting string="Update expense state">
                        <field name="request_document_ex_state" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
