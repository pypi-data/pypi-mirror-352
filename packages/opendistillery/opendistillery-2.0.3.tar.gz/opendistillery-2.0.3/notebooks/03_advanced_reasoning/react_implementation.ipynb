    "            \"task_type\": \"strategic_reasoning\",\n",
    "            \"description\": \"Generate reasoning trace for problem solving step\",\n",
    "            \"input_data\": {\n",
    "                \"problem\": problem,\n",
    "                \"context\": context,\n",
    "                \"previous_actions\": self.action_history[-3:],  # Last 3 actions\n",
    "                \"reasoning_goal\": \"determine_next_action\"\n",
    "            },\n",
    "            \"reasoning_strategy\": \"chain_of_thought\",\n",
    "            \"required_capabilities\": [\"reasoning\", \"analysis\"]\n",
    "        }\n",
    "        \n",
    "        response = requests.post(\n",
    "            f\"{self.api_base}/tasks\",\n",
    "            headers=self.headers,\n",
    "            json=reasoning_request\n",
    "        )\n",
    "        \n",
    "        if response.status_code == 200:\n",
