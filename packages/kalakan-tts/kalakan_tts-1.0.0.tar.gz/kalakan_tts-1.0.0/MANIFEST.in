include README.md
include LICENSE
include MANIFEST.in
include pyproject.toml
include setup.py

# Documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Configuration files
recursive-include kalakan *.yaml
recursive-include kalakan *.yml
recursive-include kalakan *.json
recursive-include kalakan *.toml

# Data files
recursive-include kalakan *.txt
recursive-include kalakan *.csv
recursive-include kalakan *.tsv

# Model files (if any)
recursive-include kalakan *.pt
recursive-include kalakan *.pth
recursive-include kalakan *.onnx

# Exclude development and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .pytest_cache
global-exclude .coverage
global-exclude .tox
global-exclude .mypy_cache
global-exclude build
global-exclude dist
global-exclude *.egg-info