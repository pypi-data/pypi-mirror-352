<!-- restart approval -->
<record
            id="rma_customer_policy_template_detail_restart_approval"
            model="policy.template_detail"
        >
    <field name="template_id" ref="rma_customer_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','rma_customer'),('name','=','restart_approval_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','rma_customer'),('value','=','confirm')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('rma_customer_validator_group')])]" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if not document.approval_template_id:
    result = True
    </field>
</record>

