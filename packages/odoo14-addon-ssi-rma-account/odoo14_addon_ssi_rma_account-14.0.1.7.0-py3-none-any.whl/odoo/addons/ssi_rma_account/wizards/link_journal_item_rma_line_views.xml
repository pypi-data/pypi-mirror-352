<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="link_journal_item_rma_line_view_form" model="ir.ui.view">
    <field name="name">Link RMA Line To Journal Items</field>
    <field name="model">link_journal_item_rma_line</field>
    <field name="arch" type="xml">
        <form>
            <field name="model_id" invisible="1" />
            <field name="allowed_account_move_line_ids" invisible="1" />
            <field
                    name="account_move_line_ids"
                    domain="[('id','in',allowed_account_move_line_ids)]"
                />
            <footer>
                <button
                        string="Confirm"
                        name="action_confirm"
                        type="object"
                        class="oe_highlight"
                        confirm="Are you sure?"
                    />
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="link_journal_item_rma_line_action" model="ir.actions.act_window">
    <field name="name">Link RMA Line To Journal Items</field>
    <field name="res_model">link_journal_item_rma_line</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="link_journal_item_rma_line_view_form" />
    <field name="target">new</field>
</record>

</odoo>
